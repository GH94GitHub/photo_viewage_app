def srcRoot = "photo_viewage_app"
def appPath = srcRoot + "/target"
def origPropPath = "/home/ec2-user/application.properties"

pipeline {
  agent any
  stages {
    stage("Clean Up") {
      steps {
        deleteDir()
      }
    }
    stage("Clone") {
      steps {
        sh "git clone -v git@github.com:GH94GitHub/photo_viewage_app.git"
      }
    }
    stage("Clean") {
      steps {
        dir("${srcRoot}") {
          sh "chmod u+x ./mvnw"
          sh "./mvnw clean"
        }
      }
    }
    stage("Install") {
      steps {
        dir("${srcRoot}") {
          sh "./mvnw install -DskipTests"
        }
      }
    }
    stage("Move Config") {
      steps {
        dir("${appPath}") {
         	sh "cp ${origPropPath} ."
        }
      }
    }
    stage("Deploy") {
       steps {
         sh "sudo systemctl restart photoviewage"
       }
     }
  }
}
